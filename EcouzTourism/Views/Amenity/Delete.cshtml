@model AmenityVM

<div class="w-100 card border-0 p-2 ">
    <h1 class="neon-text">
        Delete Amenity
    </h1>
    <div class="card-body  p-2">
        <form method="post" class="row" enctype="multipart/form-data">
            <input hidden asp-for="Amenity.Id" />
            <div class="p-3">
                @* <div asp-validation-summary="All"></div>  *@
                <div class="form-floating py-1 col-12">
                    <select asp-for="@Model.Amenity.VillaId" asp-items="@Model.VillaList"
                            class="form-select border shadow">
                        <option disabled selected> Select Villa </option>
                    </select>
                    <label asp-for="Amenity.VillaId" class="ms-2 neon-text"></label>
                    <span asp-validation-for="Amenity.VillaId" class="text-danger neon-text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Amenity.Name" readonly class="form-control border shadow" />
                    <label asp-for="Amenity.Name" class="ms-2 neon-text"></label>
                    <span asp-validation-for="Amenity.Name" class="text-danger neon-text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Amenity.Description" readonly class="form-control border shadow" />
                    <label asp-for="Amenity.Description" class="ms-2 neon-text"></label>
                    <span asp-validation-for="Amenity.Description" class="text-danger neon-text-danger"></span>
                </div>


                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-danger w-100 neon-button-danger">
                            <i class="bi bi-check-circle"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Amenity" asp-action="Index" class="btn btn-outline-secondary w-100  neon-button">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}