@model IEnumerable<Amenity>

<div class="w-100 card border-0 p-4">
    <h1 class="neon-text">
        Amenity List
    </h1>
    <div class="row pb-3">
        <div class="col-6 offset-6 text-end">
            <a asp-controller="Amenity" asp-action="Create" class="btn  neon-button-success">
                <i class="bi bi-plus-circle"></i> Create Amenity
            </a>
        </div>
    </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>Villa Name</th>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Id</td>
                        <td>@obj.Villa.Name</td>
                        <td>@obj.Name</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Amenity" asp-action="Update" asp-route-amenityId="@obj.Id"
                                   class="btn btn-outline-info neon-button-info mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Amenity" asp-action="Delete" asp-route-amenityId="@obj.Id"
                               class="btn btn-outline-danger neon-button-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>