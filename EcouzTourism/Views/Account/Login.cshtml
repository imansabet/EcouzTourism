@model LoginVM

<div class="container pt-5">
    <div class="row justify-content-center animate-container">
        <div class="col-md-6 animate-card">
            <div class="card shadow border bg-gradient">
                <h1 class="neon-text m-2 text-center animate-heading">Login</h1>
                <div class="card-body p-4">
                    <form method="post" class="text-center">
                        <input asp-for="RedirectUrl" hidden />
                        <div asp-validation-summary="ModelOnly" class="text-danger animate-validation"></div>
                        <div class="form-floating mb-3 animate-email">
                            <input asp-for="Email" class="form-control bg-white text-dark" aria-required="true" />
                            <label asp-for="Email" class="form-label"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 animate-password">
                            <input asp-for="Password" class="form-control bg-white text-dark" aria-required="true" />
                            <label asp-for="Password" class="form-label"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3 animate-remember-me">
                            <input class="form-check-input" asp-for="RememberMe" />
                            <label class="form-check-label" for="RememberMe">Remember Me</label>
                        </div>
                        <div class="animate-button">
                            <button type="submit" class="btn btn-lg btn-outline-success w-50">Log in</button>
                        </div>
                        <div class="d-flex justify-content-between pt-2 animate-links">
                            <p><a asp-action="ForgotPassword">Forgot your password?</a></p>
                            <p><a asp-action="Register" asp-route-returnUrl="@Model.RedirectUrl">Register as a new user</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-container {
        animation: fadeInUp 0.5s ease-in-out;
    }

    .animate-card {
        animation: fadeInUp 1s ease-in-out;
        animation-delay: 0.1s;
    }

    .animate-heading {
        animation: fadeInUp 1s ease-in-out;
        animation-delay: 0.2s;
    }

    .animate-validation {
        animation: fadeInUp 1s ease-in-out;
        animation-delay: 0.3s;
    }

    .animate-email {
        animation: fadeInUp 1s ease-in-out;
        animation-delay: 0.4s;
    }

    .animate-password {
        animation: fadeInUp 1s ease-in-out;
        animation-delay: 0.5s;
    }

    .animate-remember-me {
        animation: fadeInUp 1s ease-in-out;
        animation-delay: 0.6s;
    }

    .animate-button {
        animation: fadeInUp 1s ease-in-out;
        animation-delay: 0.7s;
    }

    .animate-links {
        animation: fadeInUp 1s ease-in-out;
        animation-delay: 0.8s;
    }
</style>
